@model Student
<form asp-action="Edit">
    <div class="form-group mb-2">
        <label asp-for="FirstName"></label>
        <input type="text" asp-for="@Model.FirstName" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="LastName"></label>
        <input type="text" asp-for="@Model.LastName" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label asp-for="DateOfBirth"></label>
        <input type="date" asp-for="@Model.DateOfBirth" class="form-control" />
    </div>
    <div>
        <input type="submit" class="btn btn-success m-2" value="Update student"/>
    </div>

</form>